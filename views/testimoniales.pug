extends ./layout/index.pug
block contenido
    main(class="container mt-5")
        h1(class="text-center mt-5") #{locals.pagina}

        //- p #{JSON.stringify(locals.testimoniales)}
        blockquote(class="text-center") Lee sobre nuestros clientes y sus experiencias
        include ./layout/bloque_testimoniales

        div(class="row")

            div(class="col-md-12") 
                h2(class="d-block w-100 text-center" ) Agrega Un Testimonial 

                //- p #{JSON.stringify(locals.errores)}
                if(locals.errores)
                    each error in errores
                        div(class="alert col alert-danger text-center") #{error.mensaje}

            div(class="row justify-content-center col")
                div(class="col-md-8")
                    form(action="/testimoniales" method="POST")
                        div(class="form-group")
                            label(for="Nombre") Nombre
                            input#nombre(type="text" placeholder="Tu Nombre", name="nombre" class="form-control" value=locals.nombre)
                        div(class="form-group")
                                label(for="correo") Correo Electronico
                                //- el valor que tiene asociado al atributo name es com ose identifica en el req
                                input#correo(type="text" placeholder="Tu Correo", name="correo" class="form-control" value=locals.correo)
                        div(class="form-group")
                                label(for="mensaje") Mensaje
                                textarea#mensaje(name="mensaje", rows="3" class="form-control" ) #{locals.mensaje }

                        input(type="submit" class="btn btn-success btn-block")